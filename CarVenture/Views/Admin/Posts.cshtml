@model IEnumerable<PostResponseDto>

<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>S/N</th>
                <th>Title</th>
                <th>Tag</th>
                <th>Created</th>
            </tr>
        </thead>
        <tbody>
            @{
                int count = 0;

                if(Model.Count() > 0)
                {
                    foreach(var post in Model)
                    {
                        <tr>
                            <td>@{count++;} @count</td>
                            <td>@post.Title</td>
                            <td>@post.Tag</td>
                            <td>@post.CreatedAt</td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>